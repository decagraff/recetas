<nav class="navbar">
    <div class="container">
        <div class="navbar-content">
            
            <!-- Logo -->
            <a href="/" class="navbar-brand">
                <i class="fas fa-utensils"></i>
                <span><%= appConfig.name %></span>
            </a>
            
            <!-- Búsqueda (desktop) -->
            <div class="navbar-search">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Buscar recetas, usuarios, ingredientes..." id="searchInput">
            </div>
            
            <!-- Navbar links -->
            <div class="navbar-links">
                <a href="/" class="nav-link <%= page === 'home' ? 'active' : '' %>">
                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </a>
                
                <a href="/explore" class="nav-link <%= page === 'explore' ? 'active' : '' %>">
                    <i class="fas fa-compass"></i>
                    <span>Explorar</span>
                </a>
                
                <% if (isAuthenticated) { %>
                    <!-- Usuario autenticado -->
                    <a href="/recipe/create" class="nav-link nav-link-create">
                        <i class="fas fa-plus-circle"></i>
                        <span>Crear Receta</span>
                    </a>
                    
                    <a href="/notifications" class="nav-link nav-link-icon <%= page === 'notifications' ? 'active' : '' %>">
                        <i class="fas fa-bell"></i>
                        <span class="badge" id="notificationBadge">0</span>
                    </a>
                    
                    <div class="navbar-user-menu">
                        <button class="user-menu-toggle" id="userMenuToggle">
                            <img src="<%= user.avatar %>" alt="<%= user.username %>" class="avatar-sm">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        
                        <div class="user-dropdown" id="userDropdown">
                            <div class="user-dropdown-header">
                                <img src="<%= user.avatar %>" alt="<%= user.username %>" class="avatar-md">
                                <div>
                                    <p class="username">@<%= user.username %></p>
                                    <p class="fullname"><%= user.firstName && user.lastName ? user.firstName + ' ' + user.lastName : user.username %></p>
                                </div>
                            </div>
                            
                            <div class="user-dropdown-links">
                                <a href="/user/<%= user.username %>">
                                    <i class="fas fa-user"></i> Mi Perfil
                                </a>
                                <a href="/user/edit">
                                    <i class="fas fa-edit"></i> Editar Perfil
                                </a>
                                <a href="/collections">
                                    <i class="fas fa-bookmark"></i> Mis Colecciones
                                </a>
                                <a href="/settings">
                                    <i class="fas fa-cog"></i> Configuración
                                </a>
                                <% if (user.role === 'admin') { %>
                                    <a href="/admin">
                                        <i class="fas fa-shield-alt"></i> Panel Admin
                                    </a>
                                <% } %>
                                <hr>
                                <a href="/auth/logout">
                                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                </a>
                            </div>
                        </div>
                    </div>
                    
                <% } else { %>
                    <!-- Usuario no autenticado -->
                    <a href="/auth/login" class="btn btn-outline">Iniciar Sesión</a>
                    <a href="/auth/register" class="btn btn-primary">Registrarse</a>
                <% } %>
                
                <!-- Toggle de tema -->
                <button id="theme-toggle" class="theme-toggle" aria-label="Cambiar tema">
                    <i class="fas fa-sun icon-light"></i>
                    <i class="fas fa-moon icon-dark"></i>
                </button>
            </div>
            
            <!-- Hamburger menu (mobile) -->
            <button class="navbar-toggle" id="navbarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>
</nav>

<!-- Mobile menu -->
<div class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-content">
        <div class="mobile-menu-header">
            <button class="mobile-menu-close" id="mobileMenuClose">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <!-- Búsqueda mobile -->
        <div class="mobile-search">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Buscar...">
        </div>
        
        <!-- Links mobile -->
        <div class="mobile-menu-links">
            <a href="/"><i class="fas fa-home"></i> Inicio</a>
            <a href="/explore"><i class="fas fa-compass"></i> Explorar</a>
            <% if (isAuthenticated) { %>
                <a href="/recipe/create"><i class="fas fa-plus-circle"></i> Crear Receta</a>
                <a href="/user/<%= user.username %>"><i class="fas fa-user"></i> Mi Perfil</a>
                <a href="/collections"><i class="fas fa-bookmark"></i> Colecciones</a>
                <a href="/settings"><i class="fas fa-cog"></i> Configuración</a>
                <% if (user.role === 'admin') { %>
                    <a href="/admin"><i class="fas fa-shield-alt"></i> Admin</a>
                <% } %>
                <hr>
                <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
            <% } else { %>
                <a href="/auth/login"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</a>
                <a href="/auth/register"><i class="fas fa-user-plus"></i> Registrarse</a>
            <% } %>
        </div>
    </div>
</div>

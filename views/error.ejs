<%- include('layout', { 
    title: title,
    page: page,
    body: `
        <div class="error-page">
            <div class="container">
                <div class="error-content">
                    <div class="error-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span class="error-code">${error.status || 500}</span>
                    </div>
                    
                    <h1>¡Oops! Algo salió mal</h1>
                    <p class="error-message">${error.message || 'Ha ocurrido un error inesperado'}</p>
                    
                    <div class="error-actions">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Volver al Inicio
                        </a>
                        <button onclick="history.back()" class="btn btn-outline">
                            <i class="fas fa-arrow-left"></i> Volver Atrás
                        </button>
                    </div>
                    
                    ${error.stack && process.env.NODE_ENV === 'development' ? `
                        <details class="error-details">
                            <summary>Detalles técnicos (solo en desarrollo)</summary>
                            <pre>${error.stack}</pre>
                        </details>
                    ` : ''}
                </div>
            </div>
        </div>
    `
}) %>

<style>
.error-page {
    min-height: calc(100vh - 140px);
    display: flex;
    align-items: center;
    padding: 4rem 0;
}

.error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.error-icon {
    position: relative;
    margin-bottom: 2rem;
}

.error-icon i {
    font-size: 6rem;
    color: var(--error);
}

.error-code {
    display: block;
    font-size: 8rem;
    font-weight: 900;
    color: var(--error);
    line-height: 1;
    margin: 1rem 0;
}

.error-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.error-message {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
}

.error-details {
    background: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 12px;
    text-align: left;
    margin-top: 2rem;
}

.error-details summary {
    cursor: pointer;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
}

.error-details pre {
    background: var(--bg-tertiary);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    font-size: 0.875rem;
    color: var(--error);
    white-space: pre-wrap;
}

@media (max-width: 768px) {
    .error-code {
        font-size: 5rem;
    }
    
    .error-content h1 {
        font-size: 1.8rem;
    }
    
    .error-actions {
        flex-direction: column;
    }
}
</style>

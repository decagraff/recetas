# ===========================================
# CONFIGURACIÓN GENERAL DEL PROYECTO
# ===========================================

# Nombre del proyecto
APP_NAME=RecetApp
APP_TITLE=RecetApp - Comparte tus recetas
APP_DESCRIPTION=Plataforma social para compartir y descubrir recetas de cocina
APP_KEYWORDS=recetas,cocina,comida,gastronomía,chef

# ===========================================
# SERVIDOR
# ===========================================

PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# ===========================================
# BASE DE DATOS MYSQL
# ===========================================

DB_HOST=localhost
DB_USER=recetas_user
DB_PASSWORD=tu_password_seguro_aqui
DB_NAME=recetas_db
DB_PORT=3306

# ===========================================
# SESIONES
# ===========================================

SESSION_SECRET=tu_session_secret_muy_seguro_y_aleatorio_aqui_cambiar_en_produccion
SESSION_MAX_AGE=2592000000
# 2592000000 = 30 días en milisegundos

# ===========================================
# UPLOAD DE ARCHIVOS
# ===========================================

MAX_FILE_SIZE=5242880
# 5242880 = 5MB en bytes

ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_EXTENSIONS=mp4,webm,mov

# Calidad de compresión de imágenes (1-100)
IMAGE_QUALITY=85

# ===========================================
# TEMA Y DISEÑO
# ===========================================

# Colores principales (modo claro)
PRIMARY_COLOR=#3B82F6
SECONDARY_COLOR=#06B6D4

# Colores principales (modo oscuro)
DARK_PRIMARY_COLOR=#60A5FA
DARK_SECONDARY_COLOR=#22D3EE
DARK_BG_PRIMARY=#262624
DARK_BG_SECONDARY=#1C1C1A

# ===========================================
# EMAIL (OPCIONAL - Para notificaciones)
# ===========================================

EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion
EMAIL_FROM=RecetApp <noreply@recetapp.com>

# ===========================================
# REDES SOCIALES (Para compartir)
# ===========================================

FACEBOOK_APP_ID=
TWITTER_HANDLE=@recetapp

# ===========================================
# FEATURES (Activar/Desactivar funcionalidades)
# ===========================================

# Permitir registro de nuevos usuarios
REGISTRATION_ENABLED=true

# Requiere verificación de email
EMAIL_VERIFICATION_REQUIRED=false

# Permitir mensajería privada
MESSAGES_ENABLED=true

# Permitir comentarios
COMMENTS_ENABLED=true

# Mostrar anuncios
ADS_ENABLED=false

# ===========================================
# LÍMITES Y RESTRICCIONES
# ===========================================

# Máximo de recetas por usuario (0 = ilimitado)
MAX_RECIPES_PER_USER=0

# Máximo de colecciones por usuario
MAX_COLLECTIONS_PER_USER=20

# Máximo de fotos por receta
MAX_PHOTOS_PER_RECIPE=10

# Máximo de ingredientes por receta
MAX_INGREDIENTS=50

# Máximo de pasos por receta
MAX_STEPS=30

# ===========================================
# PAGINACIÓN
# ===========================================

RECIPES_PER_PAGE=12
USERS_PER_PAGE=20
COMMENTS_PER_PAGE=10
NOTIFICATIONS_PER_PAGE=15

# ===========================================
# BADGES Y LOGROS
# ===========================================

BADGE_FIRST_RECIPE=true
BADGE_10_RECIPES=true
BADGE_100_LIKES=true
BADGE_100_FOLLOWERS=true

# ===========================================
# SEO
# ===========================================

SITE_AUTHOR=Tu Nombre
SITE_LANGUAGE=es
SITE_CHARSET=UTF-8

# ===========================================
# ANALYTICS (OPCIONAL)
# ===========================================

GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# ===========================================
# SEGURIDAD
# ===========================================

# Intentos de login antes de bloqueo temporal
MAX_LOGIN_ATTEMPTS=5

# Tiempo de bloqueo en minutos
LOGIN_LOCKOUT_TIME=15

# Forzar HTTPS en producción
FORCE_HTTPS=false

# ===========================================
# DESARROLLO
# ===========================================

# Mostrar logs detallados
DEBUG=true

# Mostrar errores completos en página
SHOW_ERRORS=true
